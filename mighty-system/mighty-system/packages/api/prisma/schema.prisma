generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id               String             @id @default(uuid())
  name             String
  slug             String             @unique
  status           TenantStatus       @default(TRIAL)
  subscriptionTier SubscriptionTier   @default(FREE)
  settings         Json               @default("{}")
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  users            User[]
  customers        Customer[]
  services         Service[]
  staff            Staff[]
  bookings         Booking[]
  locations        Location[]
  appointments     Appointment[]
  subscriptions    Subscription[]

  @@index([slug])
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
  TRIAL
  CANCELLED
}

enum SubscriptionTier {
  FREE
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

model User {
  id        String   @id @default(uuid())
  tenantId  String
  email     String
  password  String
  role      UserRole @default(STAFF)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  staff  Staff?

  @@unique([tenantId, email])
  @@index([tenantId])
}

enum UserRole {
  OWNER
  MANAGER
  STAFF
}

model Customer {
  id              String   @id @default(uuid())
  tenantId        String
  email           String
  firstName       String
  lastName        String
  phone           String?
  addressLine1    String?
  addressLine2    String?
  city            String?
  postcode        String?
  country         String   @default("UK")
  dateOfBirth     DateTime?
  marketingConsent Boolean @default(false)
  gdprConsent     Boolean  @default(false)
  notes           String?
  tags            String[] @default([])
  metadata        Json     @default("{}")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tenant     Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  bookings   Booking[]
  appointments Appointment[]

  @@unique([tenantId, email])
  @@index([tenantId])
}

model Service {
  id              String   @id @default(uuid())
  tenantId        String
  name            String
  description     String?
  duration        Int      // minutes
  price           Float
  currency        String   @default("GBP")
  categoryId      String?
  isActive        Boolean  @default(true)
  maxCapacity     Int      @default(1)
  bufferTime      Int      @default(0)
  staffRequired   Int      @default(1)
  color           String?
  minAdvanceHours Int      @default(0)
  maxAdvanceDays  Int      @default(365)
  minCancelHours  Int      @default(24)
  refundPercent   Float    @default(100)
  metadata        Json     @default("{}")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tenant      Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  category    Category?    @relation(fields: [categoryId], references: [id])
  bookings    Booking[]
  appointments Appointment[]
  staff       StaffService[]

  @@index([tenantId])
  @@index([categoryId])
}

model Staff {
  id         String   @id @default(uuid())
  tenantId   String
  userId     String   @unique
  firstName  String
  lastName   String
  email      String
  phone      String?
  role       UserRole @default(STAFF)
  isActive   Boolean  @default(true)
  workingHours Json   @default("{}")
  breaks     Json     @default("[]")
  metadata   Json     @default("{}")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant      Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings    Booking[]
  appointments Appointment[]
  services    StaffService[]

  @@index([tenantId])
}

model StaffService {
  id        String @id @default(uuid())
  staffId   String
  serviceId String

  staff   Staff   @relation(fields: [staffId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([staffId, serviceId])
}

model Booking {
  id                String         @id @default(uuid())
  tenantId          String
  customerId        String
  serviceId         String
  staffId           String?
  locationId        String?
  startTime         DateTime
  endTime           DateTime
  status            BookingStatus  @default(PENDING)
  notes             String?
  price             Float
  deposit           Float          @default(0)
  metadata          Json           @default("{}")
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  cancelledAt       DateTime?
  confirmationSentAt DateTime?

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  staff    Staff?   @relation(fields: [staffId], references: [id], onDelete: SetNull)
  location Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)

  @@index([tenantId, startTime])
  @@index([tenantId, staffId, startTime])
  @@index([customerId])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

model Location {
  id          String   @id @default(uuid())
  tenantId    String
  name        String
  address     String?
  postcode    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant   Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  bookings Booking[]
  appointments Appointment[]

  @@index([tenantId])
}

model Category {
  id        String   @id @default(uuid())
  tenantId  String
  name      String
  color     String?
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  services Service[]

  @@unique([tenantId, name])
  @@index([tenantId])
}

model Appointment {
  id         String   @id @default(uuid())
  tenantId   String
  customerId String
  serviceId  String
  staffId    String
  locationId String?
  startTime  DateTime
  endTime    DateTime
  status     BookingStatus @default(PENDING)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant    Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customer  Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  service   Service   @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  staff     Staff     @relation(fields: [staffId], references: [id], onDelete: Cascade)
  location  Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)

  @@index([tenantId, startTime])
}

model Subscription {
  id              String   @id @default(uuid())
  tenantId        String   @unique
  stripeCustomerId String?
  stripeSubscriptionId String?
  plan            SubscriptionTier
  status          SubscriptionStatus
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELLED
  TRIALING
  INCOMPLETE
}

model AuditLog {
  id         String   @id @default(uuid())
  tenantId   String
  userId     String?
  action     String
  entityType String
  entityId   String
  oldValues  Json?
  newValues  Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@index([tenantId, createdAt])
  @@index([entityType, entityId])
}

model GDPRConsent {
  id         String   @id @default(uuid())
  customerId String
  tenantId   String
  type       String
  granted    Boolean
  source     String
  timestamp  DateTime @default(now())

  @@index([customerId, tenantId])
}
